doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title KongDeck - What KONG are you ?

        link(rel='stylesheet', href='/css/survey.css')
        script(src='/js/scroll.js')

    body
        header
            p KongDeck
        
        #container
            form(action="/", method="post")
                h1 What KONG are you ?
                each questionStep, stepIndex in survey
                    h2 #{questionStep.question}
                    .answers
                        each answerStep, answerIndex in questionStep.answers
                            - var id="radio" + stepIndex + answerIndex;
                            input(id=id, type="radio", name=stepIndex, value=answerStep.points)
                            label(for=id).radio=answerStep.answer
                button(type="submit") Find your KONG
        
        footer
            p Â© #{new Date().getFullYear()} STH Expanded